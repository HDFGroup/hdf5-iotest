#!/bin/sh

prefix=/usr/local
darshan=false
gperf=false
hdf5=false

for arg in "$@"; do
    case "$arg" in
    --prefix=*)
        prefix=`echo $arg | sed 's/--prefix=//'`
        ;;

    --with-darshan=*)
        darshan=`echo $arg | sed 's/--with-darshan=//'`
        ;;

    --with-gperf=*)
        gperf=`echo $arg | sed 's/--with-gperf=//'`
        ;;

    --with-hdf5=*)
        hdf5=`echo $arg | sed 's/--with-hdf5=//'`
        ;;

    --help)
        echo 'usage: ./configure [options]'
        echo 'options:'
        echo '  --prefix=<path>: installation prefix'
        echo '  --with-darshan=<path>: Darshan installation root'
        echo '  --with-gperf=<path>: google-perf (libprofiler) library dir'
        echo '  --with-hdf5=<path>: HDF5 installation root'
        echo 'all invalid options are silently ignored'
        exit 0
        ;;
    esac
done

if test "$darshan" = "false"; then
    echo 'No Darshan installation specified.'
    exit 1
fi

if test "$gperf" = "false"; then
    echo 'No google-perf installation specified.'
    exit 2
fi

if test "$hdf5" = "false"; then
    echo 'No HDF5 installation specified.'
    exit 3
fi

echo 'generating makefile ...'
echo "PREFIX = $prefix" >Makefile
echo "DARSHAN_DIR = $darshan" >Makefile
echo "PROFILER_LIB_DIR = $gperf" >Makefile
echo "HDF5_DIR = $hdf5" >Makefile
cat Makefile.in >>Makefile
echo 'configuration complete, type make to build.'